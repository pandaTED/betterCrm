<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.panda.bettercrm.domain">

	<class name="Tracking" table="bettercrm_tracking">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="text"></property>
		<property name="trackingSaveDate"></property>


		<!-- 与Customer的多对一关系 -->
		<many-to-one name="customer" class="Customer" column="customerId"></many-to-one>

	</class>
</hibernate-mapping>



