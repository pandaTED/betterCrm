<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 配置扩展名 -->
	<constant name="struts.action.extension" value="do"></constant>
	<!-- 配置开发模式 -->
	<constant name="struts.devMode" value="true"></constant>
	<!-- 配置主题为simple-->
	<constant name="struts.ui.theme" value="simple"></constant>
	<!-- 配置默认的包 -->
	  <package name="default" namespace="/" extends="struts-default">
	  
	  <!-- 可以配置拦截器 -->
	<!-- <interceptors> -->
	 	  <!-- 声明拦截器 -->
<!-- 	  	<interceptor name="" class=""></interceptor> -->
	  	  <!-- 声明拦截器栈 -->
<!-- 	  	<interceptor-stack name=""></interceptor-stack> -->
	 <!--  </interceptors> -->

	  <!-- 声明默认本包中的所有action都要经过设置的拦截器栈 -->
	  <!-- 	<default-interceptor-ref name=""></default-interceptor-ref>	 -->
	  <!-- 可以设置全局的result -->
	<!-- 	<global-results>
		</global-results>
		 -->
	<action name="helloWorld" class="helloWorld">
		<!-- 默认的动作是转发 -->
		<result name="success" type="dispatcher">/WEB-INF/jsp/helloworld.jsp</result>
	</action>
	
	<!-- 用户action的配置 -->
	<action name="userAction_*" class="userAction" method="{1}">
		<!-- 默认的动作是转发 -->
		<result name="loginUI" >/WEB-INF/jsp/user/login.jsp</result>
		<result name="registerUI" >/WEB-INF/jsp/user/register.jsp</result>
		<result name="login_success" type="redirectAction">customerAction_listCustomer</result>
		<result name="login_fail" >/WEB-INF/jsp/message/fail.jsp</result>
		<result name="register_success" >/WEB-INF/jsp/message/success.jsp</result>
		<result name="register_fail" >/WEB-INF/jsp/message/fail.jsp</result>
	</action>
	<!-- 客户action的配置 -->
	<action name="customerAction_*" class="customerAction" method="{1}">
		<result name="saveCustomerUI">/WEB-INF/jsp/customer/saveCustomer.jsp</result>
		<result name="listCustomer">/WEB-INF/jsp/customer/listCustomer.jsp</result>
		<result name="customerDetail">/WEB-INF/jsp/customer/customerDetail.jsp</result>
		<result name="updateCustomerUI">/WEB-INF/jsp/customer/updateCustomer.jsp</result>
		<result name="updateCustomerSuccess">/WEB-INF/jsp/message/success.jsp</result>
		<result name="updateCustomerFail">/WEB-INF/jsp/message/fail.jsp</result>
		<result name="saveCustomerSuccess">/WEB-INF/jsp/message/success.jsp</result>
		<result name="saveCustomerFail">/WEB-INF/jsp/message/fail.jsp</result>
		<result name="deleteCustomerSuccess">/WEB-INF/jsp/message/success.jsp</result>
		<result name="deleteCustomerFail">/WEB-INF/jsp/message/fail.jsp</result>
		
	</action>
	
	
	
	</package>
</struts>    
