<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 配置扩展名 -->
	<constant name="struts.action.extension" value="do"></constant>
	<!-- 配置开发模式 -->
	<constant name="struts.devMode" value="true"></constant>
	<!-- 配置主题为simple-->
	<constant name="struts.ui.theme" value="simple"></constant>
	<!-- 配置默认的包 -->
	  <package name="default" namespace="/" extends="struts-default">
	  
	  <!-- 可以配置拦截器 -->
	<!-- <interceptors> -->
	 	  <!-- 声明拦截器 -->
<!-- 	  	<interceptor name="" class=""></interceptor> -->
	  	  <!-- 声明拦截器栈 -->
<!-- 	  	<interceptor-stack name=""></interceptor-stack> -->
	 <!--  </interceptors> -->

	  <!-- 声明默认本包中的所有action都要经过设置的拦截器栈 -->
	  <!-- 	<default-interceptor-ref name=""></default-interceptor-ref>	 -->
	  <!-- 可以设置全局的result -->
	<!-- 	<global-results>
		</global-results>
		 -->
	<action name="helloWorld" class="helloWorld">
		<!-- 默认的动作是转发 -->
		<result name="success" type="dispatcher">/WEB-INF/jsp/helloworld.jsp</result>
	</action>
	
	<action name="userAction_*" class="userAction" method="{1}">
		<!-- 默认的动作是转发 -->
		<result name="loginUI" >/WEB-INF/jsp/user/login.jsp</result>
		<result name="registerUI" >/WEB-INF/jsp/user/register.jsp</result>
		<result name="login_sucess" >/WEB-INF/jsp/message/sucess.jsp</result>
		<result name="login_fail" >/WEB-INF/jsp/message/fail.jsp</result>
		<result name="register_sucess" >/WEB-INF/jsp/message/sucess.jsp</result>
		<result name="register_fail" >/WEB-INF/jsp/message/fail.jsp</result>
	</action>
	
	</package>
</struts>    
